<mujoco model="ur5e_shadow_scene">
  <compiler angle="radian" meshdir="assets" autolimits="true" />
  <!-- <compiler meshdir="assets/object_sim" texturedir="assets/object_sim" /> -->
  <!-- <include file="assets/object_sim/common.xml" /> -->

  <!-- <include file="assets/object_sim/table/assets.xml" />
  <include file="assets/object_sim/cubesmall/assets.xml" />
  <include file="assets/object_sim/coffeemug/assets.xml" /> -->

  <visual>
    <headlight diffuse="0.3 0.3 0.3" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <rgba haze="0.25 0.25 0.35 1"/>
    <global azimuth="0" elevation="-30" fovy="65"/>
  </visual>

  <default>
    <!-- 纯显示：不参与接触 -->
    <default class="visual">
      <geom contype="0" conaffinity="0" group="1"/>
    </default>

    <!-- 碰撞：参与接触 -->
    <default class="collision">
      <geom contype="1" conaffinity="1" group="0"/>
    </default>
  </default>

  <statistic center="0.7 0 0.6" extent="0.8"/>

  <asset>
    <model name="banana_model"  file="assets/object_sim/banana/object.xml"/>
    <model name="cube_model"  file="assets/object_sim/cubemedium/object.xml"/>
    <model name="cylinder_model"  file="assets/object_sim/rubberduck/object.xml"/>
    <model name="ur5e_shadowhand" file="ur5e_shadowhand_scene_pin.xml"/>

    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0."/>
  </asset>

  <worldbody>
    <body name="ur5e_shadowhand" pos="0 0 0">
      <attach model="ur5e_shadowhand" prefix=""/>
    </body>
    <geom name="table" type="box" size="0.3 0.3 0.05" pos="0.8 0.1 0.1" rgba="0.1 0.1 0.1 1" contype="1" conaffinity="1"/>
    <body name="banana1" pos="0.7 -0.05 0.15">
      <freejoint/>
      <attach model="banana_model" prefix="banana1_"/>
    </body>
    <body name="cube1" pos="0.9 0.25 0.15">
      <freejoint/>
      <attach model="cube_model" prefix="cube1_"/>
    </body>
    <body name="cylinder1" pos="0.9 0.05 0.15" quat="1 0 0 0">
      <freejoint/>
      <attach model="cylinder_model" prefix="cylinder1_"/>
    </body>



    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

  </worldbody>

</mujoco>